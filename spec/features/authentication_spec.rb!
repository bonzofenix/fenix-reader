require 'spec_helper'

describe 'Authentications' do
  describe 'without signing into app' do
    it 'twitter sign in button should sign in the user though twitter page' do
      request.env['omniauth.auth'] = OmniAuth.config.mock_auth[:twitter] 
      visit root_path
      click_link 'Sign in with Twitter'
      User.last.uid.should == '123545'
    end
  end
end
